  <%= simple_form_for(@barbecue) do |f| %>
   <div>
     <%= f.input :name, label:'Nom' %>
     <%= f.input :description %>
     <%= f.input :price, as: :integer, label: 'Prix de location' %>
     <%= f.input :location, label: 'Ville' %>
     <%= f.input :category, collection: ["Gaz", "Electrique", "Charbon", "Autre"], label:'Type de BBQ' %>
     <%= f.input :photo %>
     <%= f.input :photo_cache, as: :hidden %>
   </div>


   <%= f.submit 'Je depose mon annonce', class: "btn-ghost submit-bbq"%>

  <% end %>

