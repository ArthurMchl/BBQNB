<div class="card-rental">
  <h3 class="card-name-barbecue"><%= @barbecue.name %></h3>
  <div class="card-rental-description">
    <div class="card-rental-photo">
<!--       cl_image_tag @barbecue.photo
 -->    </div>
    <div class="card-information">
      <div class="card-rental-info">
        <ul>
          <li><strong>Description:</strong> <%= @barbecue.description %></li>
          <li><strong>Category:</strong> <%= @barbecue.category %></li>
          <li><strong>Location:</strong> <%= @barbecue.location %></li>
        </ul>
      </div>
      <div class="card-rental-rented">
        <%= image_tag('saucisse.png', size: "60x180" ) %>
        <%= link_to 'Grill me plz!',new_barbecue_rental_path(@barbecue) ,class: "btn btn-warning"%>
      </div>
    </div>
  </div>
  <div class="card-rental-owner-information">
    <p><em>Annonce postée le : <%= @barbecue.created_at %></em></p>
    <p><em>Propriétaire : <%= @barbecue.user.email %></em></p>
  </div>
</div>
